<div class="d-flex justify-content-between">
  <h1 class="commanHeading">Proxy Provider Failure Count :<b> </b></h1>
</div>
<div class="card">
  <div class="body table-responsive">
    <table class="table table-striped table-bordered" style="width: 100%">
      <thead>
        <tr>
          <th>Proxy Provider Name</th>
          <th>Failure Threshold Count</th>
          <th>Failure Count</th>
          <th>Last Counter Reset At</th>
          <th>1st Error in Cycle Occurred at</th>
          <th>Action</th>
          <th>Last Modified By</th>
          <th>Last Modified On</th>
        </tr>
      </thead>
      <tbody>
        <% itemModel.proxyFailureData.forEach(function (item,idx) { %>
        <tr>
          <td>
            <%= item.providerName %>
          </td>
          <td>
            <input
              type="number"
              class="form-control"
              value="<%= item.thresholdCount %>"
              name="threshold_count_<%= item.proxyProvider %>"
              placeholder="Threshold Count"
            /><br />
            <button
              type="button"
              onclick="updateThresholdForProvider('<%= item.proxyProvider %>')"
              class="btn btn-primary"
              style="width: 70px"
            >
              Save
            </button>
          </td>
          <td>
            <%= item.failureCount %>
          </td>
          <td>
            <%= item.lastResetTime %>
          </td>
          <td>
            <%= item.initTime %>
          </td>
          <td>
            <button
              type="button"
              onclick="resetProxyProvider('<%= item.proxyProvider %>')"
              class="btn btn-warning"
              style="width: 70px"
            >
              Reset
            </button>
          </td>
          <td>
            <%= item.lastUpdatedBy %>
          </td>
          <td>
            <%= item.lastUpdatedOn %>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
  </div>
</div>
