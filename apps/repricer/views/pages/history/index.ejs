<form method="post" autocomplete="off" id="form_cron_settings">
  <div class="page">
    <div class="container-fluid">
      <div class="d-flex justify-content-between">
        <h1 class="commanHeading">Historical Data for Products :<b> </b></h1>
      </div>
      <hr />
      <div class="card">
        <div class="body table-responsive">
          <table id="example" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Search by Criteria :</th>
                <th>
